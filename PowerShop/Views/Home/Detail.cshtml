@model DetailsViewModel
@{
    ViewData["Title"] = "جزئیات محصول" + Model.Product.ProductName;
}


<div class="row">
    <div class="col-md-9">
        <div class="jumbotron">
            <h5 >@Model.Product.ProductName</h5>
            <p class="lead">@Model.Product.ProductDescription</p>
            <hr class="my-4">
            <h6 class="card-title">Product Price: @Model.Product.Item.PriceItem</h6>
            <h6 class="card-title">Product Quantity In Stock: @Model.Product.Item.QuantityInStock</h6>
            <hr />
            @foreach (var item in Model.Categories)
            {
                <h6>Category Name:<a> @item.CategoryName </a></h6>
                <h6>CategoryDescription: @item.CategoryDescription</h6>
            }
            <div>
                <a class="btn btn-primary"
                   asp-controller="Home"
                   asp-action="AddToCart"
                   asp-route-itemId="@Model.Product.IdItem">افزودن به سبد خرید</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <img src="@($"/images/{@Model.Product.ProductId}.jpg")" />

        </div>
    </div>

</div>



