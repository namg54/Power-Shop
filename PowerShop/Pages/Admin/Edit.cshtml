@page
@model PowerShop.Pages.Admin.EditModel
@{
    ViewData["Title"] = "ویرایش کردن محصول";
}
<h1>ویرایش کردن محصول</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id"/>
    
    <dl class="dl-horizontal">
        <dd>
            <label asp-for="Product.Name"></label>
        </dd>
        <dt>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name"></span>
        </dt>
        <dd>
            <label asp-for="Product.Description"></label>
        </dd>
        <dt>
            <textarea asp-for="Product.Description" class="form-control"></textarea>
            <span asp-validation-for="Product.Description"></span>
        </dt>
        <dd>
            <label asp-for="Product.Price"></label>
        </dd>
        <dt>
            <input asp-for="Product.Price" />
            <span asp-validation-for="Product.Price"></span>
        <dt>
        <dd>
            <label asp-for="Product.QuantityStock"></label>
        </dd>
        <dt>
            <input asp-for="Product.QuantityStock" class="form-control" />
            <span asp-validation-for="Product.QuantityStock"></span>
        </dt>
        <dd> <label asp-for="Product.Picture"></label></dd>
        <dt>
            <input asp-for="Product.Picture" />
            <span asp-validation-for="Product.Picture"></span>
        </dt>
        <dd>گروه ها</dd>
        <dt>
            @foreach (var item in Model.Product.Categories)
            {
                <input type="checkbox" name="selectedGroups" value="@item.CategoryId" @((Model.GroupsProducts.Any(c=>c==item.CategoryId)?"checked":""))/>@item.CategoryName
            }
        </dt>
    </dl>
    <br/>
    <input type="submit" value="ثبت کردن" class="btn btn-success"/>
</form>